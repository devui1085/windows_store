<Window x:Class="PaasteelAppEncryptor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PaasteelAppEncryptor"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="30 20">
                    <Button x:Name="BrowseButton" Margin="0 10" Content="Browse" Click="BrowseButton_Click" />

            <TextBlock ><Run>PathTextBlock:</Run></TextBlock>
            <TextBox x:Name="UriTextBox"  Margin="0 0 0 5" IsReadOnly="True"></TextBox>

            <TextBlock > <Run>Output:</Run></TextBlock>
            <RichTextBox x:Name="OutputRichTextBox" Height="180" AcceptsReturn="True"  ></RichTextBox>
        </StackPanel>


    </Grid>
</Window>
