<UserControl
    x:Class="WindowsStore.Client.Developer.UI.Views.TopAppBarUserControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WindowsStore.Client.Developer.UI.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvvm="using:Prism.Windows.Mvvm"
    xmlns:viewModels="using:WindowsStore.Client.Developer.Logic.ViewModels"
    d:DataContext="{d:DesignInstance viewModels:TopAppBarUserControlViewModel,IsDesignTimeCreatable=True}"
    mvvm:ViewModelLocator.AutoWireViewModel="True"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Grid>
        <RelativePanel>
            <Button x:Name="SignOutButton" Command="{Binding SignOutCommand}" Content="خروج" Width="50"></Button>
        </RelativePanel>
    </Grid>
</UserControl>
