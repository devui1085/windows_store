<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style TargetType="TextBox" x:Key="TextBoxBaseStyle">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="MaxLength" Value="50" />
    </Style>

    <Style TargetType="PasswordBox" x:Key="PasswordBoxBaseStyle">
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="MaxLength" Value="50" />
    </Style>

    <Style TargetType="ComboBox" x:Key="ComboBoxBaseStyle">
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="ToggleSwitch" x:Key="ToggleSwitchBaseStyle">
        <Setter Property="BorderThickness" Value="1"/>
    </Style>

    <Style TargetType="ListViewItem" x:Key="ListViewItemContainerBaseStyle">
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
    </Style>
</ResourceDictionary>
